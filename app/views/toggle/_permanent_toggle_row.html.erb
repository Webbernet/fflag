<% activated = @facade.activated_toggles.include?(toggle['identifier']) %>
<div class="permanent-row-container <%= !activated ? 'deactivated-row' : '' %>">
  <div class="details">
    <h3> <%= toggle['name'] %> </h3>
    <div class="ident">Identifier: <%= toggle['identifier'] %></div>
    <br>
    <%= toggle['description'] %>
  </div>

  <div class="switch">
    <label class="switch">
      <input type="checkbox" id="<%= toggle['identifier'] %>" class="toggle" <%= activated ? 'checked' : ''  %>>
      <span class="slider round"></span>
    </label>
  </div>
</div>