<style>
.toggle-table {
  border-spacing: 0;
  padding: 0 40px;
}

.toggle-table th {
  padding: 15px 0;
  font-size: 18px;
  border-bottom: solid 1px #efe7e7;
  /*border-top: solid 1px #efe7e7;*/
  /*background-color: #f7f7f7;*/
}

.toggle-table td {
  padding: 30px 5px;
  border-bottom: solid 1px #efe7e7;
}

.row-container {
  padding: 20px;
  border-bottom: solid 1px #efe7e7;
}

.permanent-row-container {
  display: flex;
  justify-content: space-between;
  padding: 20px;
  border-bottom: solid 1px #efe7e7;
}

.deactivated-row {
  color: #c7c7c7;
}

.row-container h3 {
  margin: 0;
}

.ident {
  color: #ababab;
}

body {
  font-family: 'Roboto', sans-serif;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
  background-color: #e8e8e8;
}

/* The switch - the box around the slider */
.switch {
  position: relative;
  display: inline-block;
  width: 60px;
  height: 34px;
}

.switch-container {
  padding-left: 10px;
  padding-right: 10px;
}

/* Hide default HTML checkbox */
.switch input {
  opacity: 0;
  width: 0;
  height: 0;
}

/* The slider */
.slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ccc;
  -webkit-transition: .4s;
  transition: .4s;
}

.slider:before {
  position: absolute;
  content: "";
  height: 26px;
  width: 26px;
  left: 4px;
  bottom: 4px;
  background-color: white;
  -webkit-transition: .4s;
  transition: .4s;
}

input:checked + .slider {
  background-color: #2196F3;
}

input:focus + .slider {
  box-shadow: 0 0 1px #2196F3;
}

input:checked + .slider:before {
  -webkit-transform: translateX(26px);
  -ms-transform: translateX(26px);
  transform: translateX(26px);
}

/* Rounded sliders */
.slider.round {
  border-radius: 34px;
}

.slider.round:before {
  border-radius: 50%;
}

.card {
  background-color: white;
  padding: 20px;

  box-shadow: 1px 1px 13px 0px #d8d5d5;
  border-radius: 6px;
}
.section {
  padding: 20px;
  text-align: center;
  background-color: #f7f7f7;
  font-size: 21px;
}
</style>

<script
  src="https://code.jquery.com/jquery-3.4.1.min.js"
  integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
  crossorigin="anonymous"></script>

<script type="text/javascript" charset="utf-8">
  $( document ).ready(function() {
    $('.toggle').on('click', function(event) {
      var activated = ($(event.target).prop('checked') == true)

      var result = confirm("Are you sure you want to change this?");
      if (result) {
        $.ajax({
          url: '<%= Fflag::Engine.routes.url_helpers.FFtoggle_update_toggle_path %>',
          type: "put",
          data: {
            identifier: $(event.target).prop('id'),
            toggle_on: activated
          }
        })

        if (activated) {
          $(event.target).parent().parent().parent().removeClass('deactivated-row')
        } else {
          $(event.target).parent().parent().parent().addClass('deactivated-row')
        }
      }

    })
  });

</script>

<div class="card">
  <h1>Feature Flag Control Panel</h1>

  <% if @facade.temporary_toggles %>
  <div class="section">
    Temporary
  </div>
  <div class="">
    <table class="toggle-table">
      <thead>
        <th>Information</th>
        <th>Updated</th>
        <th></th>
      </thead>
      <% @facade.temporary_toggles.each do |toggle| %>
        <% activated = @facade.activated_toggles.include?(toggle['identifier']) %>
        <tr class="row-container <%= !activated ? 'deactivated-row' : '' %>">
          <%= render 'toggle/temporary_toggle_row', toggle: toggle, activated: activated %>
        </tr>
      <% end %>
    </table>
  </div>
  <% end %>

  <div style="margin-bottom: 40px"></div>

  <% if @facade.permanent_toggles %>
  <div class="section">
    Permanent
  </div>
  <div>
    <% @facade.permanent_toggles.each do |toggle| %>
      <%= render 'toggle/permanent_toggle_row', toggle: toggle %>
    <% end %>
  </div>
  <% end %>
</div>
